<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:fontFamily="@font/" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:text="@string/body"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"/>
        <RelativeLayout
            android:id="@+id/color_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_tv"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp">
            <RelativeLayout
                android:id="@+id/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_background"
                android:padding="8sp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/color1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="color1"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/color1_iv"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_toRightOf="@id/color1_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/online_status_circle"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_background"
                android:padding="8sp"
                android:layout_centerHorizontal="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/color2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="color2"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/color2_iv"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_toRightOf="@id/color2_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/online_status_circle"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/color3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_background"
                android:padding="8sp"
                android:layout_alignParentRight="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/color3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="color3"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/color3_iv"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_toRightOf="@id/color3_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/online_status_circle"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>
